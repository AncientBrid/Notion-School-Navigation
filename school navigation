	<script>

		let direction = "horizontal";
		if (direction === "vertical") {
			document.head.insertAdjacentHTML("beforeend", `<style>.navMenu a {display: block; text-align:left; margin:7px} i{width:15px; margin-right:5px} .navMenu{margin:3px}</style>`)
		}


		function navigate(id) {

			if (id == 'learnhub')
				window.open("https://www.notion.so/d03dff341eb749c998ddb44216a7a5b2", '_blank').focus();
			else if (id == 'homework')
				window.open("https://www.notion.so/b0a50a2f047549bdafe1ed742f010fc6", '_blank').focus();
			else if (id == 'projects')
				window.open("https://www.notion.so/a8291327fd964163bc7fcfb378b7a879", '_blank').focus();
			else if (id == 'research')
				window.open("https://www.notion.so/c9bbd12b0dd34bd6b8d5d8cf6a8baaa1", '_blank').focus();
			else if (id == 'schedule')
				window.open("https://www.notion.so/899510160afb4f2a80da48f9562d4970", '_blank').focus();
		}
	</script>


